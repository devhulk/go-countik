{
	{{$end := false}}
	{{$len := len .}}
    "blocks": [
		{{ range $i, $data := . }}
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "@{{.UserName}} {{.Emoji}}",
				"emoji": true
			}
		},
		{
    		"type": "section",
    		"accessory": {
    			"type": "image",
    			"image_url": "{{.AvatarThumb}}",
    			"alt_text": "img"
    		},
            "text": {
                "type": "mrkdwn",
                "text": ":busts_in_silhouette: *{{.FollowerCount}}*\n:heart: *{{.HeartCount}}*\n:video_camera: *{{.VideoCount}}*"

            } 
    	} 
    	{{if (eq (minus $len $i) 1)}}
		,{
			"type": "divider"
		}
		{{else}}
		,{
			"type": "divider"
		},
		{{end}}
		{{end}}
    ]
}
